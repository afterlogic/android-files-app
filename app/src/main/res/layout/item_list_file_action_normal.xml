<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.afterlogic.aurora.drive.presentation.modules.main.viewModel.FileActionItemViewModel"/>
    </data>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/bg_simple_highlight"
        style="@style/RootLayout.Item"
        android:gravity="center"
        android:onClick="@{viewModel}">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:tint="@color/colorAccent"
            app:imageResource="@{viewModel.icon}"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_toEndOf="@+id/icon"
            android:padding="8dp"
            android:maxLines="2"
            android:text="@{viewModel.text}"
            android:gravity="start"
            tools:text="asdfasfdasdf.sdf"/>
    </RelativeLayout>
</layout>