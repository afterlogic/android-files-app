<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.afterlogic.aurora.drive.presentation.modules.filelist.view.FileListBindHelper"
                alias="bindHelper"/>
        <variable
            name="viewModel"
            type="com.afterlogic.aurora.drive.presentation.modules.filelist.viewModel.FileListViewModel"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:refreshing="@{viewModel.refreshing}"
            bind:onRefresh="@{viewModel}"
            bind:colorSchemeResources="@{@intArray/swipe_refresh_color_scheme}">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:layoutManager="@{bindHelper.linearLayoutManager()}"
                bind:adapter="@{bindHelper.filesAdapter()}"
                bind:items="@{viewModel.files}"
                tools:listitem="@layout/item_list_file_bind"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>